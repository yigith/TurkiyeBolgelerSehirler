@model List<Bolge>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Türkiye'nin Bölgeleri</h1>

<div class="list-group">
    @foreach (var item in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="BolgeBilgi" asp-route-slug="@item.Slug">
            @item.BolgeAd
        </a>
    }
</div>


